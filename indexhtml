    <script>
        // Получаем элементы DOM
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const scoreElement = document.getElementById('score');
        const highScoreElement = document.getElementById('high-score');
        const finalScoreElement = document.getElementById('final-score');
        const finalHighScoreElement = document.getElementById('final-high-score');
        const gameOverScreen = document.getElementById('game-over-screen');
        const restartBtn = document.getElementById('restart-btn');
        const leftBtn = document.getElementById('left-btn');
        const rightBtn = document.getElementById('right-btn');
        const boostBtn = document.getElementById('boost-btn');
        const boostPercentElement = document.getElementById('boost-percent');
        const boostFillElement = document.getElementById('boost-fill');
        const wantedLevelElement = document.getElementById('wanted-level');
        
        // Загрузка изображений
        const cjImg = new Image();
        cjImg.src = 'data:image/svg+xml;base64,';
        
        // Игровые переменные
        let player = {
            x: canvas.width / 2 - 20,
            y: canvas.height - 150,
            width: 40,
            height: 60,
            velocityX: 0,
            velocityY: 0,
            color: '#3498db',
            boost: 100,
            isBoosting: false,
            jetpackColor: '#1E1E1E'
        };
        
        let buildings = [];
        let powerups = [];
        let police = [];
        let score = 0;
        let highScore = localStorage.getItem('sidjetHighScore') || 0;
        let gameRunning = true;
        let keys = {};
        let scrollOffset = 0;
        let buildingCount = 12;
        let gravity = 0.3;
        let jumpForce = -9;
        let boostForce = -12;
        let policeActive = false;
        let policeTimer = 0;
        let springForce = -15;
        
        // Устанавливаем рекорд
        highScoreElement.textContent = highScore;
        boostFillElement.style.width = '100%';
        
        // Создаем здания
        function createBuildings() {
            buildings = [];
            powerups = [];
            police = [];
            
            // Первое здание под игроком
            buildings.push({
                x: canvas.width / 2 - 60,
                y: canvas.height - 80,
                width: 120,
                height: 30,
                color: '#555',
                windows: true,
                hasPolice: false,
                hasPowerup: 'none'
            });
            
            // Создаем остальные здания
            for (let i = 0; i < buildingCount; i++) {
                let width = 70 + Math.random() * 80;
                let hasPolice = Math.random() < 0.2; // 20% шанс появления полиции
                let hasPowerup = 'none';
                
                // Если нет полиции, может быть усиление
                if (!hasPolice) {
                    if (Math.random() < 0.3) { // 30% шанс на огонь для реактивного ранца
                        hasPowerup = 'fire';
                    } else if (Math.random() < 0.2) { // 20% шанс на пружину
                        hasPowerup = 'spring';
                    }
                }
                
                buildings.push({
                    x: Math.random() * (canvas.width - width),
                    y: Math.random() * canvas.height / 2,
                    width: width,
                    height: 30,
                    color: hasPolice ? '#223355' : '#555',
                    windows: true,
                    hasPolice: hasPolice,
                    hasPowerup: hasPowerup
                });
                
                // Добавляем полицию на здание
                if (hasPolice) {
                    police.push({
                        x: Math.random() * (width - 20) + buildings[buildings.length-1].x,
                        y: buildings[buildings.length-1].y - 30,
                        width: 20,
                        height: 30,
                        color: '#0000ff'
                    });
                }
                
                // Добавляем усиления на здание
                if (hasPowerup !== 'none') {
                    powerups.push({
                        x: Math.random() * (width - 20) + buildings[buildings.length-1].x,
                        y: buildings[buildings.length-1].y - 15,
                        width: 20,
                        height: 20,
                        type: hasPowerup,
                        color: hasPowerup === 'fire' ? '#ff4500' : '#00ff00'
                    });
                }
            }
        }
        
        // Обработка нажатий клавиш
        document.addEventListener('keydown', (e) => {
            keys[e.key] = true;
            
            // Активация реактивного ранца по пробелу
            if (e.code === 'Space' && player.boost > 0) {
                player.isBoosting = true;
            }
        });
        
        document.addEventListener('keyup', (e) => {
            keys[e.key] = false;
            
            // Деактивация реактивного ранца
            if (e.code === 'Space') {
                player.isBoosting = false;
            }
        });
        
        // Обработка нажатий кнопок на экране
        leftBtn.addEventListener('mousedown', () => {
            keys['ArrowLeft'] = true;
            keys['a'] = true;
        });
        
        leftBtn.addEventListener('mouseup', () => {
            keys['ArrowLeft'] = false;
            keys['a'] = false;
        });
        
        leftBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            keys['ArrowLeft'] = true;
            keys['a'] = true;
        });
        
        leftBtn.addEventListener('touchend', (e) => {
            e.preventDefault();
            keys['ArrowLeft'] = false;
            keys['a'] = false;
        });
        
        rightBtn.addEventListener('mousedown', () => {
            keys['ArrowRight'] = true;
            keys['d'] = true;
        });
        
        rightBtn.addEventListener('mouseup', () => {
            keys['ArrowRight'] = false;
            keys['d'] = false;
        });
        
        rightBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            keys['ArrowRight'] = true;
            keys['d'] = true;
        });
        
        rightBtn.addEventListener('touchend', (e) => {
            e.preventDefault();
            keys['ArrowRight'] = false;
            keys['d'] = false;
        });
        
        boostBtn.addEventListener('mousedown', () => {
            if (player.boost > 0) {
                player.isBoosting = true;
            }
        });
        
        boostBtn.addEventListener('mouseup', () => {
            player.isBoosting = false;
        });
        
        boostBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            if (player.boost > 0) {
                player.isBoosting = true;
            }
        });
        
        boostBtn.addEventListener('touchend', (e) => {
            e.preventDefault();
            player.isBoosting = false;
        });
        
        // Обновление игры
        function update() {
            if (!gameRunning) return;
            
            // Управление игроком
            player.velocityX = 0;
            if (keys['ArrowLeft'] || keys['a']) {
                player.velocityX = -6;
            }
            if (keys['ArrowRight'] || keys['d']) {
                player.velocityX = 6;
            }
            
            // Реактивный ранец
            if (player.isBoosting && player.boost > 0) {
                player.velocityY = boostForce;
                player.boost -= 0.8;
                if (player.boost < 0) player.boost = 0;
            } else {
                // Применяем гравитацию
                player.velocityY += gravity;
            }
            
            // Обновляем позицию игрока
            player.x += player.velocityX;
            player.y += player.velocityY;
            
            // Ограничиваем движение игрока по горизонтали
            if (player.x < 0) player.x = canvas.width;
            if (player.x > canvas.width) player.x = 0;
            
            // Проверяем столкновение со зданиями
            for (let i = 0; i < buildings.length; i++) {
                let building = buildings[i];
                
                if (
                    player.velocityY > 0 &&
                    player.x < building.x + building.width &&
                    player.x + player.width > building.x &&
                    player.y + player.height > building.y &&
                    player.y + player.height < building.y + building.height
                ) {
                    // Проверяем, есть ли на здании полиция
                    if (building.hasPolice) {
                        // Активируем полицию
                        policeActive = true;
                        policeTimer = 120; // 2 секунды при 60 FPS
                        wantedLevelElement.style.display = 'block';
                        
                        // Сбрасываем счет
                        score = 0;
                        scoreElement.textContent = score;
                        
                        // Сбрасываем позицию игрока
                        player.y = building.y - player.height;
                        player.velocityY = jumpForce;
                        break;
                    }
                    
                    // Обычный прыжок
                    player.velocityY = jumpForce;
                    player.y = building.y - player.height;
                    
                    // Проверяем, есть ли на здании усиление
                    for (let j = 0; j < powerups.length; j++) {
                        let powerup = powerups[j];
                        
                        if (
                            player.x < powerup.x + powerup.width &&
                            player.x + player.width > powerup.x &&
                            player.y < powerup.y + powerup.height &&
                            player.y + player.height > powerup.y
                        ) {
                            // Подбираем усиление
                            if (powerup.type === 'fire') {
                                player.boost += 25;
                                if (player.boost > 100) player.boost = 100;
                                boostPercentElement.textContent = Math.round(player.boost) + '%';
                                boostFillElement.style.width = player.boost + '%';
                            } else if (powerup.type === 'spring') {
                                player.velocityY = springForce;
                                player.y -= 10;
                            }
                            
                            // Удаляем подобранное усиление
                            powerups.splice(j, 1);
                            j--;
                            
                            // Добавляем очки за усиление
                            score += 50;
                            scoreElement.textContent = score;
                        }
                    }
                }
            }
            
            // Обновляем таймер полиции
            if (policeActive) {
                policeTimer--;
                if (policeTimer <= 0) {
                    policeActive = false;
                    wantedLevelElement.style.display = 'none';
                }
            }
            
            // Прокрутка мира вниз, когда игрок поднимается
            if (player.y < canvas.height / 2 && player.velocityY < 0) {
                scrollOffset += -player.velocityY;
                
                // Перемещаем здания вниз
                for (let i = 0; i < buildings.length; i++) {
                    buildings[i].y += -player.velocityY;
                    
                    // Перемещаем полицию
                    for (let p of police) {
                        if (p.associatedBuilding === i) {
                            p.y += -player.velocityY;
                        }
                    }
                    
                    // Перемещаем усиления
                    for (let p of powerups) {
                        if (p.associatedBuilding === i) {
                            p.y += -player.velocityY;
                        }
                    }
                    
                    // Если здание ушло за нижний край экрана, перемещаем его наверх
                    if (buildings[i].y > canvas.height) {
                        buildings[i].y = -scrollOffset - 50;
                        buildings[i].x = Math.random() * (canvas.width - buildings[i].width);
                        
                        // Обновляем наличие полиции и усилений
                        buildings[i].hasPolice = Math.random() < 0.2;
                        buildings[i].color = buildings[i].hasPolice ? '#223355' : '#555';
                        
                        // Если есть полиция, добавляем её
                        if (buildings[i].hasPolice) {
                            police.push({
                                x: Math.random() * (buildings[i].width - 20) + buildings[i].x,
                                y: buildings[i].y - 30,
                                width: 20,
                                height: 30,
                                color: '#0000ff',
                                associatedBuilding: i
                            });
                        } else {
                            // Определяем тип усиления
                            let powerupType = 'none';
                            if (Math.random() < 0.3) {
                                powerupType = 'fire';
                            } else if (Math.random() < 0.2) {
                                powerupType = 'spring';
                            }
                            
                            buildings[i].hasPowerup = powerupType;
                            
                            // Если есть усиление, добавляем его
                            if (powerupType !== 'none') {
                                powerups.push({
                                    x: Math.random() * (buildings[i].width - 20) + buildings[i].x,
                                    y: buildings[i].y - 15,
                                    width: 20,
                                    height: 20,
                                    type: powerupType,
                                    color: powerupType === 'fire' ? '#ff4500' : '#00ff00',
                                    associatedBuilding: i
                                });
                            }
                        }
                        
                        // Добавляем очки за каждое пройденное здание
                        score += 20;
                        scoreElement.textContent = score;
                    }
                }
                
                // Удаляем полицию, которая ушла за экран
                for (let i = police.length - 1; i >= 0; i--) {
                    if (police[i].y > canvas.height) {
                        police.splice(i, 1);
                    }
                }
                
                // Удаляем усиления, которые ушли за экран
                for (let i = powerups.length - 1; i >= 0; i--) {
                    if (powerups[i].y > canvas.height) {
                        powerups.splice(i, 1);
                    }
                }
                
                // Добавляем очки за высоту
                score += Math.round(-player.velocityY * 0.5);
                scoreElement.textContent = score;
            }
            
            // Обновляем отображение реактивного ранца
            boostPercentElement.textContent = Math.round(player.boost) + '%';
            boostFillElement.style.width = player.boost + '%';
            
            // Проверяем, упал ли игрок
            if (player.y > canvas.height) {
                gameOver();
            }
            
            // Обновляем рекорд
            if (score > highScore) {
                highScore = score;
                highScoreElement.textContent = highScore;
                localStorage.setItem('sidjetHighScore', highScore);
            }
        }
        
        // Отрисовка игры
        function draw() {
            // Очищаем канвас
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Рисуем фон ночного города
            drawBackground();
            
            // Рисуем здания
            for (let building of buildings) {
                // Основное здание
                ctx.fillStyle = building.color;
                ctx.fillRect(building.x, building.y, building.width, building.height);
                
                // Крыша
                ctx.fillStyle = '#333';
                ctx.fillRect(building.x - 5, building.y - 5, building.width + 10, 5);
                
                // Окна
                if (building.windows) {
                    ctx.fillStyle = '#ffd700';
                    let windowCount = Math.floor(building.width / 15);
                    for (let w = 0; w < windowCount; w++) {
                        if (Math.random() > 0.3) { // 70% шанс что окно светится
                            ctx.fillRect(building.x + 5 + w * 15, building.y + 5, 8, 10);
                        }
                    }
                }
                
                // Боковые стены
                ctx.fillStyle = '#444';
                ctx.fillRect(building.x, building.y + building.height, 5, 10);
                ctx.fillRect(building.x + building.width - 5, building.y + building.height, 5, 10);
            }
            
            // Рисуем полицию
            for (let officer of police) {
                // Тело полицейского
                ctx.fillStyle = officer.color;
                ctx.fillRect(officer.x, officer.y, officer.width, officer.height);
                
                // Голова
                ctx.fillStyle = '#ffcc99';
                ctx.fillRect(officer.x + 5, officer.y - 10, 10, 10);
                
                // Фуражка
                ctx.fillStyle = '#0000ff';
                ctx.fillRect(officer.x + 3, officer.y - 12, 14, 4);
                
                // Мигающий свет
                if (policeActive && Math.floor(Date.now() / 200) % 2 === 0) {
                    ctx.fillStyle = '#ff0000';
                    ctx.fillRect(officer.x + 2, officer.y - 5, 4, 4);
                    ctx.fillRect(officer.x + officer.width - 6, officer.y - 5, 4, 4);
                }
            }
            
            // Рисуем усиления
            for (let powerup of powerups) {
                ctx.fillStyle = powerup.color;
                
                if (powerup.type === 'fire') {
                    // Огонь для реактивного ранца
                    ctx.beginPath();
                    ctx.moveTo(powerup.x + powerup.width/2, powerup.y);
                    ctx.lineTo(powerup.x + powerup.width, powerup.y + powerup.height);
                    ctx.lineTo(powerup.x, powerup.y + powerup.height);
                    ctx.closePath();
                    ctx.fill();
                    
                    // Внутренний огонь
                    ctx.fillStyle = '#ff8c00';
                    ctx.beginPath();
                    ctx.moveTo(powerup.x + powerup.width/2, powerup.y + 3);
                    ctx.lineTo(powerup.x + powerup.width - 5, powerup.y + powerup.height - 3);
                    ctx.lineTo(powerup.x + 5, powerup.y + powerup.height - 3);
                    ctx.closePath();
                    ctx.fill();
                } else if (powerup.type === 'spring') {
                    // Пружина
                    ctx.fillRect(powerup.x, powerup.y, powerup.width, 5);
                    ctx.fillRect(powerup.x, powerup.y + 7, powerup.width, 5);
                    ctx.fillRect(powerup.x, powerup.y + 14, powerup.width, 5);
                    
                    // Боковые части
                    ctx.fillRect(powerup.x, powerup.y + 2, 3, 13);
                    ctx.fillRect(powerup.x + powerup.width - 3, powerup.y + 2, 3, 13);
                }
            }
            
            // Рисуем игрока (Сиджея)
            drawPlayer();
            
            // Рисуем огонь из реактивного ранца при использовании
            if (player.isBoosting && player.boost > 0) {
                drawJetpackFire();
            }
        }
        
        // Рисуем игрока (Сиджея)
        function drawPlayer() {
            // Тело
            ctx.fillStyle = player.color;
            ctx.fillRect(player.x, player.y, player.width, player.height);
            
            // Реактивный ранец
            ctx.fillStyle = player.jetpackColor;
            ctx.fillRect(player.x + 5, player.y + 40, 30, 15);
            ctx.fillRect(player.x + 10, player.y + 35, 20, 5);
            
            // Голова
            ctx.fillStyle = '#ffcc99';
            ctx.fillRect(player.x + 10, player.y + 5, 20, 20);
            
            // Волосы
            ctx.fillStyle = '#8B4513';
            ctx.fillRect(player.x + 10, player.y, 20, 5);
            
            // Очки
            ctx.fillStyle = '#000';
            ctx.fillRect(player.x + 12, player.y + 10, 6, 2);
            ctx.fillRect(player.x + 22, player.y + 10, 6, 2);
            ctx.fillRect(player.x + 18, player.y + 10, 4, 1);
            
            // Рот
            ctx.fillStyle = '#8B0000';
            ctx.fillRect(player.x + 15, player.y + 18, 10, 3);
            
            // Рубашка
            ctx.fillStyle = '#c00';
            ctx.fillRect(player.x, player.y + 25, player.width, 15);
            
            // Брюки
            ctx.fillStyle = '#333';
            ctx.fillRect(player.x, player.y + 40, 15, 20);
            ctx.fillRect(player.x + 25, player.y + 40, 15, 20);
        }
        
        // Рисуем огонь из реактивного ранца
        function drawJetpackFire() {
            ctx.fillStyle = '#ff4500';
            ctx.beginPath();
            ctx.moveTo(player.x + 10, player.y + 55);
            ctx.lineTo(player.x + 15, player.y + 70);
            ctx.lineTo(player.x + 25, player.y + 70);
            ctx.lineTo(player.x + 30, player.y + 55);
            ctx.closePath();
            ctx.fill();
            
            ctx.fillStyle = '#ff8c00';
            ctx.beginPath();
            ctx.moveTo(player.x + 13, player.y + 58);
            ctx.lineTo(player.x + 17, player.y + 68);
            ctx.lineTo(player.x + 23, player.y + 68);
            ctx.lineTo(player.x + 27, player.y + 58);
            ctx.closePath();
            ctx.fill();
            
            ctx.fillStyle = '#ffd700';
            ctx.beginPath();
            ctx.moveTo(player.x + 15, player.y + 60);
            ctx.lineTo(player.x + 18, player.y + 66);
            ctx.lineTo(player.x + 22, player.y + 66);
            ctx.lineTo(player.x + 25, player.y + 60);
            ctx.closePath();
            ctx.fill();
        }
        
        // Рисуем фон ночного города
        function drawBackground() {
            // Ночное небо
            ctx.fillStyle = '#0c1a2d';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Луна
            ctx.fillStyle = '#f5f5dc';
            ctx.beginPath();
            ctx.arc(400, 80, 30, 0, Math.PI * 2);
            ctx.fill();
            
            // Звезды
            ctx.fillStyle = 'white';
            for (let i = 0; i < 50; i++) {
                let x = (i * 13) % canvas.width;
                let y = (i * 7) % 200;
                let size = Math.random() * 2 + 1;
                ctx.fillRect(x, y, size, size);
            }
            
            // Далёкие небоскребы
            ctx.fillStyle = '#111';
            for (let i = 0; i < 10; i++) {
                let x = i * 50;
                let height = 100 + Math.random() * 150;
                ctx.fillRect(x, 300 - height, 40, height);
                
                // Окна в далёких зданиях
                ctx.fillStyle = '#1a3a5f';
                for (let w = 0; w < 4; w++) {
                    for (let h = 0; h < 8; h++) {
                        if (Math.random() > 0.7) {
                            ctx.fillRect(x + 5 + w * 8, 310 - height + h * 15, 5, 8);
                        }
                    }
                }
                ctx.fillStyle = '#111';
            }
        }
        
        // Конец игры
        function gameOver() {
            gameRunning = false;
            finalScoreElement.textContent = score;
            finalHighScoreElement.textContent = highScore;
            gameOverScreen.style.display = 'block';
        }
        
        // Перезапуск игры
        function restartGame() {
            player = {
                x: canvas.width / 2 - 20,
                y: canvas.height - 150,
                width: 40,
                height: 60,
                velocityX: 0,
                velocityY: 0,
                color: '#3498db',
                boost: 100,
                isBoosting: false,
                jetpackColor: '#1E1E1E'
            };
            
            score = 0;
            scrollOffset = 0;
            policeActive = false;
            policeTimer = 0;
            scoreElement.textContent = score;
            gameRunning = true;
            gameOverScreen.style.display = 'none';
            wantedLevelElement.style.display = 'none';
            boostPercentElement.textContent = '100%';
            boostFillElement.style.width = '100%';
            
            createBuildings();
        }
        
        // Игровой цикл
        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }
        
        // Инициализация игры
        function init() {
            createBuildings();
            gameLoop();
            
            // Обработчик кнопки рестарта
            restartBtn.addEventListener('click', restartGame);
            
            // Обработчик для рестарта по нажатию пробела
            document.addEventListener('keydown', (e) => {
                if (e.code === 'Enter' && !gameRunning) {
                    restartGame();
                }
            });
        }
        
        // Запускаем игру
        init();
    </script>
</body>
</html>
